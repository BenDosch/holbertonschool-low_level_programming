#Simple makefile

#Variables

CC = gcc
SRC = $(wildcard *.c)
OBJ = $(SRC:%.c=%.o)
NAME = holberton
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

#Rules
all: $(OBJ) 
	$(CC) $(SRC) -o $(NAME)

$(OBJ): %.o: %.c

re: oclean all


#Cleaners

clean:
	$(RM) *~ holberton

oclean:
	$(RM) $(OBJ)

fclean: clean oclean
	
