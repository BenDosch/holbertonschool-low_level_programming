#Simple makefile

#Variables

CC = gcc
SRC = main.c holbeton.c
OBJ = $(SRC:%.c=%.o)
NAME = holberton
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

#Rules
all: $(OBJ) 
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

$(OBJ): %.o: %.c

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean
	
re: oclean all
