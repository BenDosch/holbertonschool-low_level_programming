#Simple makefile

#Variables

CC = gcc
SRC = main.c holberton.c
OBJ = $(SRC:%.c=%.o)
NAME = holberton
CFLAGS = -Wall -Werror -Wextra -pedantic -g -c

.PHONY: all re clean oclean fclean

#Rules
all: m.h
	$(CC) $(SRC) -o $(NAME)

re: oclean all

#Cleaners

clean:
	$(RM) *~ holberton

oclean:
	$(RM) $(OBJ)

fclean: clean oclean
	
