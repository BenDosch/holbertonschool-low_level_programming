#Simple makefile

#Variables

CC = gcc
SRC = main.c holberton.c
OBJ = $(SRC:%.c=%.o)
NAME = holberton
CFLAGS = -Wall -Werror -Wextra -pedantic -g -M -c

.PHONY: all re clean oclean fclean

#Rules
all: $(OBJ)
	$(CC) $(SRC) -o $(NAME)

re: fclean all

#Cleaners

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean
	
