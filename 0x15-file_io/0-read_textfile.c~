ssize_t read_textfile(const char *filename, size_t letters)
{
	int fd;
	ssize_t i;
	char buff[letters + 1];

	if (!filename)
		return (0);
	fd = open(filename, O_RDONLY);

	if (fd == -1)
		return (0);

	read(fd, buf, letters);
	buf[letters] = '\0'

		for(i = 0; buf[i]; i++)
			(buf[i]);


	close(fd);
	return (i);
}
